// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  userId            String   @map(name: "user_id") @db.ObjectId
  type              String   @db.String
  provider          String   @db.String
  providerAccountId String   @map(name: "provider_account_id") @db.String
  refresh_token     String?  @db.String
  access_token      String?  @db.String
  expires_at        Int?
  token_type        String?  @db.String
  scope             String?  @db.String
  id_token          String?  @db.String
  session_state     String?  @db.String
  createdAt         DateTime @default(now()) @map(name: "created_at")
  updatedAt         DateTime @updatedAt @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map(name: "accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique @map(name: "session_token")
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map(name: "sessions")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  username       String?   @unique @map(name: "user_name")
  name           String?   @db.String
  email          String?   @unique
  achievement    String?   @db.String
  emailVerified  DateTime? @map("email_verified")
  business       String?   @db.String
  isOnline       Boolean?  @default(false) @map(name: "is_online")
  active         Boolean?  @default(false)
  image          String?   @db.String
  hashedPassword String?   @map(name: "hashed_password")
  country        String?   @db.String
  phoneNumber    String?   @map("phone_number") @db.String
  description    String?
  isSeller       Boolean?  @default(false) @map(name: "is_seller")
  createdAt      DateTime  @default(now()) @map(name: "created_at")
  updatedAt      DateTime  @updatedAt @map(name: "updated_at")
  accounts       Account[]
  sessions       Session[]

  stripeCustomerId       String?   @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?   @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?   @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")
  Gig                    Gig[]
  Order                  Order[]
  Review                 Review[]

  conversationIds String[]       @db.ObjectId
  conversations   Conversation[] @relation(fields: [conversationIds], references: [id])

  seenMessageIds     String[]             @db.ObjectId
  seenMessages       Message[]            @relation("Seen", fields: [seenMessageIds], references: [id])
  messages           Message[]
  activateToken      ActivateToken[]
  passwordResetToken PasswordResetToken[]

  @@map(name: "users")
}

model ActivateToken {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  userId         String    @map(name: "user_id") @db.ObjectId
  token          String    @unique
  activationLink String    @map(name: "activation_link")
  userEmail      String    @map(name: "user_email")
  activatedAt    DateTime? @map(name: "activated_at")
  createdAt      DateTime  @default(now()) @map(name: "created_at")
  updatedAt      DateTime  @updatedAt @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map(name: "activate_tokens")
}

model PasswordResetToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @map(name: "user_id") @db.ObjectId
  token     String   @unique
  userEmail String   @map(name: "user_email")
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map(name: "password_reset_tokens")
}

model Gig {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  description    String
  totalRatings   Int?     @default(0) @map(name: "total_ratings")
  ratingNumber   Int?     @default(0) @map(name: "rating_number")
  category       String
  price          Float
  coverImage     String?  @map(name: "cover_image")
  images         String[]
  shortTitle     String   @map(name: "short_title")
  deliveryTime   Int      @map(name: "delivery_time")
  revisionNumber Int      @default(0) @map(name: "revision_number")
  features       String[]
  sales          Int?     @default(0)
  userId         String   @map(name: "user_id") @db.ObjectId
  createdAt      DateTime @default(now()) @map(name: "created_at")
  updatedAt      DateTime @updatedAt

  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  Order  Order[]
  Review Review[]

  @@map(name: "gigs")
}

model Order {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  gigId         String   @map(name: "gig_id") @db.ObjectId
  userId        String   @map(name: "user_id") @db.ObjectId
  image         String?  @db.String
  title         String   @db.String
  price         Float
  status        String   @db.String
  isCompleted   Boolean? @default(false) @map(name: "is_completed")
  paymentIntent String   @map(name: "payment_intent")
  createdAt     DateTime @default(now()) @map(name: "created_at")
  updatedAt     DateTime @updatedAt @map(name: "updated_at")

  gig    Gig     @relation(fields: [gigId], references: [id], onDelete: Cascade)
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  review Review?

  @@map(name: "orders")
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String   @unique @db.ObjectId
  gigId     String   @db.ObjectId
  userId    String   @db.ObjectId
  rating    Int
  comment   String?  @db.String
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  gig   Gig   @relation(fields: [gigId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map(name: "reviews")
}

model Conversation {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sellerId     String?   @map("seller_id") @db.ObjectId
  buyerId      String?   @map("buyer_id") @db.ObjectId
  readBySeller Boolean  @default(false) @map(name: "read_by_seller")
  readByBuyer  Boolean  @default(false) @map(name: "read_by_user")
  lastMessage  String?  @map(name: "last_message")
  createdAt    DateTime @default(now()) @map(name: "created_at")
  updatedAt    DateTime @updatedAt

  userIds String[] @db.ObjectId
  users   User[]   @relation(fields: [userIds], references: [id])

  messagesIds String[]  @db.ObjectId
  messages    Message[]

  @@map(name: "conversations")
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  body      String?  @db.String
  image     String?  @db.String
  createdAt DateTime @default(now()) @map(name: "created_at")

  seenIds String[] @db.ObjectId
  seen    User[]   @relation("Seen", fields: [seenIds], references: [id])

  conversationId String       @db.ObjectId
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  senderId String @db.ObjectId
  sender   User   @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@map(name: "messages")
}
